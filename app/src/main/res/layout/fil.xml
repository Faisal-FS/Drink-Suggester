<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/checkBoxMedical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Expense" />

    <LinearLayout
        android:id="@+id/medicalDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/editTextDrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor's Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextMedicalTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medical Tests"
            android:inputType="text" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Expense" />

    <LinearLayout
        android:id="@+id/vehicleDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/editTextOdometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Odometer Reading"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSaveExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Expense" />

</LinearLayout>
